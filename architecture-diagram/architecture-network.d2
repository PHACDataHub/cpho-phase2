direction: right

client: Client {
  icon: ./icons/general/person.svg
  shape: image
}

gcp: PHAC Google Cloud Org {
  icon: ./icons/gcp/logo.svg
  style: {
    stroke: "#000000"
    fill: "#f1f3f4"
  }

  project: HoPiC Google Cloud Project {
    icon: ./icons/general/folder.svg
    style: {
      stroke: "#ffffff"
      fill: "#e1f6fe"
    }

    loadbalancer: Regional External \nLoadBalancer \n (HTTP-HTTPS redirects){
      icon: ./icons/gcp/cloud_load_balancer.svg
      shape: image
    }

    cloudarmor: Regional Cloud Armor \nSecurity Policies \n(WAF Rules) {
      icon: ./icons/gcp/cloud_armor.svg
      shape: image
    }

    vpc: VPC {
      icon: ./icons/gcp/virtual_private_cloud.svg
      style: {
        stroke: blue
        font-color: black
        stroke-dash: 3
        fill: transparent
      }

      subnet: Regional Subnet (Montreal) {
        icon: ./icons/gcp/virtual_private_cloud.svg
        style: {
          stroke: blue
          font-color: black
          stroke-dash: 3
          fill: transparent
        }

          asm_gateway: Mesh Internal Gateway {
            icon: ./icons/kubernetes/deploy.svg
            shape: image
          }


            app: Django App {
              icon: ./icons/kubernetes/pod.svg
              shape: image
            }

            psql: PostgreSQL DB {
              icon: ./icons/kubernetes/pod.svg
              shape: image
            }
        }
      }
    }
  }

client -> gcp.project.loadbalancer: HTTPS {style: {stroke: green}}

gcp.project.cloudarmor -> gcp.project.vpc.subnet.asm_gateway: WAF rules \nfor backend
gcp.project.loadbalancer -> gcp.project.vpc.subnet.asm_gateway: Terminate Client TLS \nand forward to mesh gateway {style: {stroke: green}}

gcp.project.vpc.subnet.asm_gateway -> gcp.project.vpc.subnet.app: mTLS {style: {stroke: green}}
gcp.project.vpc.subnet.app -> gcp.project.vpc.subnet.psql: mTLS {style: {stroke: green}}
