{
  "compilerOptions": {
    "strict": true,
    "outDir": "bin",
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
